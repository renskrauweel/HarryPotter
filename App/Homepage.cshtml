@{
    // Check for session
    if (Session["id_user"] == null)
    {
        Response.Redirect("~/Login.cshtml");
    }

    int userId = Convert.ToInt32(Session["id_user"]);
    User user = new User();
    user = user.GetUser(userId);
}

@RenderPage("~/Layout/Header.cshtml")

<div class="container">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <h1>Welcome</h1>
            <div class="content-container">
                <div>
                    @if (user.GetHouseId() == 0)
                    {
                        <button type="button" class="btn btn-default" onclick="location.href='sortinghat.cshtml'">To sortinghat</button>
                    }

                </div>
                <div class="col-sm-1"></div>
            </div>
        </div>
    </div>
</div>

    @RenderPage("~/Layout/Footer.cshtml")