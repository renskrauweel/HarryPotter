@{
    Page.Title = "Sorting Hat";
}

@RenderPage("~/Layout/Header.cshtml");

<div class="container">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <h1>Welcome</h1>
            <h3>Sorteerhoed</h3>
            <div class="content-container">
                <p>Ik ben de Sorteerhoed van Zweinsteins Hogeschool voor Hekserij en Hocus Pocus. Ook dit jaar sorteer ik weer alle leerlingen in hun ware afdeling.</p>
            </div>
            <button type="button" class="btn btn-default" onclick="OpenQuestion()">Starten</button>
        </div>
        <div class="col-sm-1"></div>
    </div>
</div>



<p><b>Note:</b> The element will not take up any space when the display property set to "none".</p>

<script>
    var count = 0;
    OpenQuestion()
    {
        count++;
        var x = document.getElementById("myDIV");
        if (x.style.display === "none") {
            x.style.display = "block";
        }
        else {
            x.style.display = "none";
        }
    }
</script>
    @RenderPage("~/Layout/Footer.cshtml");